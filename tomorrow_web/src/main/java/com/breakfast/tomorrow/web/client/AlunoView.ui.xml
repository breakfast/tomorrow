<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="com.breakfast.tomorrow.web.client.ApplicationConstants"
		field="cc">
	</ui:with>
	<ui:style>
		
	</ui:style>


	<g:HTMLPanel styleName="content-page">

		<g:Label text="Alunos" styleName="app-title">
		</g:Label>
		<hr />

		<g:HorizontalPanel spacing="4">
			<g:Button text="{cc.novo}" ui:field="btnNovo"></g:Button>
			<g:Button text="{cc.salvar}" ui:field="btnSalvar"></g:Button>
			<g:Button text="{cc.cancelar}" ui:field="btnCancelar"></g:Button>
			<g:Button text="{cc.excluir}" ui:field="btnExcluir"></g:Button>
			<g:Button text="{cc.turma}" ui:field="btnRelatorio"></g:Button>
		</g:HorizontalPanel>

		<g:HorizontalPanel spacing="2">
			<g:Button text="Cadastro" styleName="tabButton" ui:field="tabCadastro"></g:Button>
			<g:Button text="Lista de Alunos" styleName="tabButton" ui:field="tabLista"></g:Button>
		</g:HorizontalPanel>

		<g:HTMLPanel ui:field="cadastro" styleName="tabContent">

			<g:HTMLPanel>

				<table>
					<tr>
						<td>
							<g:Label text="{cc.id}"></g:Label>
						</td>
						<td>
							<g:TextBox width="234px" ui:field="id" readOnly="true"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="{cc.nome}"></g:Label>
						</td>
						<td>
							<g:TextBox width="234px" ui:field="nome"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="Email"></g:Label>
						</td>
						<td>
							<g:TextBox width="234px" ui:field="email"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="Endereço" title="Endereço" />
						</td>
						<td>
							<g:TextBox width="441px" ui:field="endereco" />
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="{cc.telefone}"></g:Label>
						</td>
						<td>
							<g:TextBox width="154px" ui:field="telefone"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="Complemento" title="Complemento" />
						</td>
						<td>
							<g:TextBox width="154px" ui:field="complemento" />
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="Bairro" title="Bairro" />
						</td>
						<td>
							<g:TextBox width="381px" ui:field="bairro" />
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="Cidade" title="Cidade" />
						</td>
						<td>
							<g:TextBox width="227px" ui:field="cidade" />
						</td>
					</tr>
					<tr>
						<td>
							<g:Label text="CEP" title="CEP" />
						</td>
						<td>
							<g:TextBox width="115px" ui:field="cep" />
						</td>
					</tr>
				</table>

			</g:HTMLPanel>
			<g:VerticalPanel ui:field="fotoPanel">
			</g:VerticalPanel>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="lista" width="100%" height="500px" styleName="tabContent">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<!-- DataGrid. -->
				<g:center>
					<c:DataGrid ui:field='dataGrid' />
				</g:center>
				<!-- Pager. -->
				<g:south size="3">
					<g:HTMLPanel>

						<table style="width:100%">
							<tr>
								<td align='left'>
									<c:SimplePager ui:field='pager' />
								</td>
							</tr>
						</table>

					</g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder> 