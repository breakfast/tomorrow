<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:with type="com.breakfast.tomorrow.web.client.ApplicationConstants"
		field="cc">
	</ui:with>
	
	<g:HTMLPanel styleName="content-page">
		<g:Label text="Unidade" styleName="app-title"> </g:Label>
		<hr/>
		<g:HorizontalPanel spacing="4">
			<g:Button text="{cc.novo}" ui:field="btnNovo"></g:Button>
			<g:Button text="{cc.salvar}" ui:field="btnSalvar"></g:Button>
			<g:Button text="{cc.cancelar}" ui:field="btnCancelar"></g:Button>
			<g:Button text="{cc.excluir}" ui:field="btnExcluir"></g:Button>
		</g:HorizontalPanel>
		
		<g:HorizontalPanel spacing="2">
			<g:Button text="Cadastro" styleName="tabButton" ui:field="tabCadastro"></g:Button>
			<g:Button text="Lista de Unidade" styleName="tabButton" ui:field="tabLista"></g:Button>
		</g:HorizontalPanel>
		<g:HTMLPanel ui:field="cadastro" styleName="tabContent">
		      <g:HTMLPanel>
			         <table>
							<tr>
								<td> <g:Label text="{cc.id}"></g:Label></td>
								<td><g:TextBox width="234px" ui:field="id" enabled="false" ></g:TextBox>	</td>
							</tr>
							
							<tr>
								<td> <g:Label text="Nome da Unidade"></g:Label> </td>
								<td> <g:TextBox width="234px" ui:field="nomeUnidade" ></g:TextBox></td>
							</tr>
							
							<tr>
								<td> <g:Label text="Local da Unidade"></g:Label></td>
								<td><g:TextBox width="234px" ui:field="local" ></g:TextBox></td>
							</tr>
				
										
						</table>	
			    
			    </g:HTMLPanel>
			</g:HTMLPanel>	
			
		<g:HTMLPanel ui:field="lista" width="100%" height="500px" styleName="tabContent">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<!-- DataGrid. -->
				<g:center>
					<c:DataGrid ui:field='dataGrid' />
				</g:center>
				<!-- Pager. -->
				<g:south size="3">
					<g:HTMLPanel>

						<table style="width:100%">
							<tr>
								<td align='left'>
									<c:SimplePager ui:field='pager' />
								</td>
							</tr>
						</table>

					</g:HTMLPanel>
				</g:south>
			</g:DockLayoutPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 