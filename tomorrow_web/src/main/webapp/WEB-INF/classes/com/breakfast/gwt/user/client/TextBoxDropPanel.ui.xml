<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.breakfast.gwt.user.client.resources.ResourceBundle" field="res"></ui:with>
	<ui:style>
		.textBoxClean{
			border: none;
			width: 100%;
			outline: none;
			margin-left: 5px;
			font-size: 14px;
		}
		
		.textBoxClean:FOCUS {
			border: none;
		}
		
		.downButtonImage {
			cursor: pointer;
			height: 25px;
			max-width: 15px;
			float: right;
			border: none;
			background-color: white;
		}
		
		.focusPanel{
			width: 400px;
			border: 1px solid #D9D9D9;
			border-top: 1px solid silver;
			height: 27px;
			background-color: white;
		}
		
		.focusPanel:FOCUS{
			border: red;
		}
		
	</ui:style>
	
	<g:HorizontalPanel styleName="{style.focusPanel}" 
					   verticalAlignment="middle" 
					   horizontalAlignment="center">
		
		<g:TextBox ui:field="textBox" stylePrimaryName="{style.textBoxClean}"></g:TextBox>
		<g:Button styleName="{style.downButtonImage}" ui:field="downButtonPanel"></g:Button>
		 
	
	</g:HorizontalPanel>
	
	
</ui:UiBinder> 